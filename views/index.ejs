<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs')%>
  </head>
  <body>
    <header>
      <h1>Bird Collector</h1>
      <nav>
        <ul>
          <li><a href="/collection">My Collection</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <ul>
        <% for(let i=0; i<birds.length; i++) { %>
          <div class = "birds">
          <% if(birds[i].addToCollection === true) { %>
            <li>COLLECTED!</li>
            <li><a href="<%=birds[i]._id%>"><img class = "collected" src="<%=birds[i].image%>" alt=""></a></li>
        <% } else { %>
           <li><a href="<%=birds[i]._id%>"><img class = "notCollected" src="<%=birds[i].image%>" alt=""></a></li>
        <% } %>

        
        
        <li><%=birds[i].name%></li>
        <li><%=birds[i].scientificName%></li>
        <li><%=birds[i].description%></li>
        <form action="/<%=birds[i].id%>?_method=DELETE" method="POST">
          <input type="submit" value="DELETE" />
        </div>
        <% } %>
      </ul>
    </main>

    <footer>
      <nav>
        <ul>
          <li><a href="/new">Add Bird to Database</a></li>
        </ul>
      </nav>
    </footer>
  </body>
</html>
